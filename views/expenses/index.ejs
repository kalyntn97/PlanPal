<section>
  <h1>All Expenses</h1>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Cost</th>
      </tr>
    </thead>
    <tbody>
      <% expenses.forEach(expense => { %>
        <% if (expense.creator.equals(user?.profile._id)) { %>
           <td><%= expense.date %></td> 
           <td><%= expense.name %></td>
           <td><%= expense.cost %></td>
           <td>
            <a class='link-no-style' href='/expenses/<%= expense._id %>'>
              <button class='details-btn'>Details</button>
            </a>
           </td>
           <td>
            <form>
              <button class='delete-btn' type='submit'>‚äñ</button>
            </form>
           </td>
        <% } %>
      <% }) %>
    </tbody>
  </table>
</section>